<!-- Menu / Order Page -->
<div class="container">
    <div class="row">
        <div class="col s12">
            <div class="card white">
                <div class="card-content black-text">
                    <div id="profile"></div>
                    <!-- Modal Trigger -->
                    <p class='right-align'><button class="btn-flat modal-trigger" data-target="atcHistory">
                            Order from Order History
                        </button></p>
                    <!--_________________-->
                </div>
            </div>
        </div>
    </div>
</div>
<div class="container">
    <div class="row">
        <div class="col s12">
            <div class="card white">
                <div class="card-content black-text">
                    <span class="card-title">Cart</span>
                    <div id="cart"></div>
                    <br>
                    <p><a class="brown darken-4 btn-small" id="submitCart">Submit Order <i
                                class="material-icons right">add_shopping_cart</i></a></p>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="container">
    <div class="row">
        <div class="col s6">
            <div class="card white">
                <div class="card-content black-text">
                    <span class="card-title">Drink Menu (Cold)</span>
                    <div id="menu">
                        <table>
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>Product</th>
                                    <th>Size</th>
                                    <th></th>
                                    <th>Price</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                {{#each products}}
                                <tr>
                                    {{#unless check_hot}}
                                    {{> drinks/menu-cold}}
                                    {{/unless}}
                                    {{/each}}
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
        <div class="col s6">
            <div class="card white">
                <div class="card-content black-text">
                    <span class="card-title">Drink Menu (Hot)</span>
                    <div id="menu">
                        <table>
                            <thead>
                                <tr>
                                    <th>Id</th>
                                    <th>Product</th>
                                    <th>Size</th>
                                    <th></th>
                                    <th>Price</th>
                                    <th></th>
                                </tr>
                            </thead>

                            <tbody>
                                {{#each products}}
                                <tr>
                                    {{#if check_hot}}
                                    {{> drinks/menu-hot}}
                                    {{/if}}
                                    {{/each}}
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="container">
    <!-- Modal -->
    <div id="atcHistory" class="modal">
        <div class="modal-content">
            <h4 class="text-brown darken-4">Order History</h4>
            <div id="ordHistory"></div>
        </div>
        <div class="modal-footer">
            <hr>
            Coffee Express!
        </div>
    </div>
</div>

</div>
<!--_________________-->
</div>

<div class="container">

</div>
