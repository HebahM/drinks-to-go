<!-- Big Board Page -->

<div class="container">
    <h4 class="text-brown darken-4"><center>Today's Orders</center></h4>
</div>
<div class="container">
    <div class="row">
        <div class="col s12">
            <div class="card white">
                <div class="card-content black-text">
                    <span class="card-title orange-text darken-4">Pending</span>
                    <div id="customers">
                        <table class="responsive-table">
                            <thead>
                                <tr>
                                    <th>Order</th>
                                    <th>Customer</th>
                                    <th>Description</th>
                                    <th>Size</th>
                                    <th>Status</th>
                                </tr>
                            </thead>
                            <tbody>
                                {{#each list}}
                                <tr>
                                    {{#unless ready}}
                                    {{> drinks/status-pending}}
                                    {{/unless}}
                                </tr>
                                {{/each}}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="container">
    <div class="row">
        <div class="col s12">
            <div class="card white">
                <div class="card-content black-text">
                    <span class="card-title green-text darken44">Ready</span>
                    <div id="customers">
                        <table class="responsive-table">
                            <thead>
                                <tr>
                                    <th>Order</th>
                                    <th>Customer</th>
                                    <th>Description</th>
                                    <th>Size</th>
                                    <th>Status</th>
                                </tr>
                            </thead>


                            <tbody>
                                {{#each list}}
                                <tr>
                                    {{#if ready}}
                                    {{> drinks/status-ready}}
                                    {{/if}}

                                </tr>
                                {{/each}}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="container"></div>
