<div class="container">
    <div class="row">
        <div class="col s12">
            <div class="card white">
                <div class="card-content">
                    <div>
                        <h3>Coffee Express</h3>
                        <span><a href="./employee">
                                <h5 class="black-text darken-4 right-align">Employees</h5>
                            </a></span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="container">
    <div class="row">
        <div class="col s12">
            <div class="card white">
                <div class="card-content black-text">
                    <span class="card-title">Orders</span>
                    <div id="customers">
                        <table class="responsive-table">
                            <thead>
                                <tr>
                                    <th>Order</th>
                                    <th>Customer</th>
                                    <th>Item</th>
                                    <th>Description</th>
                                    <th>Size</th>
                                    <th>Price</th>
                                    <th>Qty</th>
                                </tr>
                            </thead>
                            <tbody>
                                {{#each orders}}
                                <tr>
                                    <td>{{this.order}}</td>
                                    <td>{{this.customer}}</td>
                                    <td>{{this.item}}</td>
                                    <td>{{this.description}}</td>
                                    <td>{{this.size}}</td>
                                    <td>{{this.price}}</td>
                                    <td>{{this.qty}}</td>
                                </tr>
                                {{/each}}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="container"></div>
